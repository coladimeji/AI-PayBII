{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["es6"],
      "allowJs": true,
      "outDir": "build",
      "rootDir": ".",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["node", "mocha", "chai"],
      "typeRoots": ["./node_modules/@types"]
    },
    "include": [
      "server/src/**/*"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
  }